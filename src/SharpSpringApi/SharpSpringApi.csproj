<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>SharpSpring</RootNamespace>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>Arke.SharpSpringApi</PackageId>
    <Authors>Arke Systems LLC</Authors>
    <Company>Arke Systems LLC</Company>
    <Product>Arke.SharpSpringApi</Product>
    <Description>.NET library for accessing SharpSpring API</Description>
    <Copyright>2019</Copyright>
    <Version>0.3</Version>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CSharp" Version="4.5.0" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.2" />
    <PackageReference Include="System.Configuration.ConfigurationManager" Version="4.5.0" />
  </ItemGroup>

</Project>
